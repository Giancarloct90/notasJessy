                        </select>
                    </div>

                    <!-- Email -->
                    <div class="form-group row">
                        <input type="text" id="defaultContactFormEmail" name="contador"
                            class="form-control mb-2 inputSize" placeholder="No. Nota" autocomplete="off"
                            value="<%- contador[0].contador %>" readonly="readonly">
                    </div>

                    <!-- Subject -->
                    <div class="form-group row">
                        <select class="browser-default custom-select mb-2 inputSize" name="fueDirDep">
                            <option value="" disabled selected>REMITENTE</option>
                            <% var fueDirDepDB %>
                            <% for(var fueDirDep of fueDirDepDB) { %>
                            <option value="<%- fueDirDep.nombre %>"><%- fueDirDep.nombre %></option>
                            <% } %>
                            <option value="Otra">Otra</option>
                        </select>
                    </div>

                    <!-- Message -->
                    <div class="form-group row">
                        <textarea class="form-control rounded-0 inputSize mb-2" id="exampleFormControlTextarea2"
                            rows="3" placeholder="Descripcion..." name="descripcion"></textarea>
                    </div>

                    <!-- Datepicker -->
                    <!-- <div class="form-group row">
                            <input id="datepicker" class="inputSize" width="276" name="txtDate" required />
                        </div> -->
                    <!-- <div class="form-group row">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="image" name="image" required multiple
                                data-show-upload="true">
                            <label class="custom-file-label" for="customFile">Selecione una imagen</label>
                        </div>
                    </div> -->

                    <!--  -->
                    <!-- <div class="form-group row">
                        <input type="file" name="ima" multiple class="inputSize">
                        <input id="input-2" name="input2[]" type="file" class="file" multiple data-show-upload="true"
                            data-show-caption="true">
                    </div> -->

                    <!-- File upload multiple -->
                    <!-- <label><strong>Upload Files</strong></label> -->
                    <div class="form-group row">
                        <div class="custom-file">
                            <input type="file" name="imagenes" multiple class="custom-file-input mb-2" id="customFile">
                            <label class="custom-file-label mb-2" for="customFile">Selecione Imagenes</label>
                        </div>
                    </div>

                    <!-- Send button -->
                    <div class="form-group row">
                        <button class="btn btn-info inputSize mb-2" type="submit">Send</button>
                    </div>

                </form>
                <!-- Default form contact -->
            </div>
        </div>

        <!-- TABLE -->
        <div class="col-md-8">
            <div class="divDatosMaestros">
                <!--Table-->
                <div class="table-responsive-sm">
                    <table class="table table-bordered" id="notasRecibidasTable">

                        <!--Table head-->
                        <thead class="thead-dark">
                            <tr>
                                <th>No.</th>
                                <th>Fecha Recibido</th>
                                <th>Tipo de Nota</th>
                                <th>Procedencia</th>
                                <th>Descripcion</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <!--Table head-->

                        <!--Table body-->
                        <tbody>
                            <% var notasRecibidasDB %>
                            <% for(var notasRecibidas of notasRecibidasDB) { %>
                            <tr>
                                <td><%- notasRecibidas.numero %></td>
                                <td><%- notasRecibidas.fechaCreacion %></td>
                                <td><%- notasRecibidas.tipoNota %></td>
                                <td><%- notasRecibidas.procedencia %></td>
                                <td><%- notasRecibidas.descripcion %></td>
                                <td><a href="/detalleNotaRecibida/<%- notasRecibidas.id %>">VER DETALLE</a></td>
                            </tr>
                            <% } %>
                        </tbody>
                        <!--Table body-->


                    </table>
                </div>
                <!--Table-->
            </div>
        </div>
    </div>

</div>

